<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="label-header" text="Der Urwolf erwacht ..." />
            <Label styleClass="label-text" text="... möchte er das Werwolf Opfer infizieren?" />
            <Label fx:id="lblWerewolfVictim" styleClass="label-text" text="Werwolf Opfer: Spieler X" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="buttonYes" defaultButton="true" mnemonicParsing="false" onAction="#saveYes" text="Ja, berühre das Opfer" />
                  <Button fx:id="buttonNo" cancelButton="true" mnemonicParsing="false" onAction="#saveNo" text="Nein" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
