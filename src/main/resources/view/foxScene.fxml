<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.werwolf_spielleiter.viewModel_character.FoxViewModel">
   <children>
      <VBox alignment="CENTER" layoutX="260.0" layoutY="59.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label styleClass="label-header" text="Der Fuchs erwacht..." />
            <Label fx:id="lblFoxAbility" maxWidth="300.0" styleClass="label-text" text="...und darf einen Spieler auswählen um zu prüfen, ob er oder einer seiner Nachbarn ein Werwolf ist." wrapText="true" />
            <Label fx:id="lblCheckResult" styleClass="label-info" text="Ergebnis" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="btnCheck" mnemonicParsing="false" onAction="#checkChosenPlayer" text="Prüfen" />
                  <Button fx:id="btnConfirm" mnemonicParsing="false" onAction="#next" text="Weiter" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
