    <top>
      <HBox alignment="CENTER" maxWidth="116.0" BorderPane.alignment="CENTER">
         <children>
              <Label fx:id="lblName" contentDisplay="CENTER" text="Name" />
         </children>
      </HBox>
    </top>
    <center>
        <ImageView fx:id="imageViewCard" fitHeight="110.0" fitWidth="116.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
    </center>
    <bottom>
        <HBox fx:id="origStatus" alignment="CENTER" maxHeight="19.0" minHeight="19.0" scaleShape="false" />
    </bottom>
    <right>
    </right>
</BorderPane>
